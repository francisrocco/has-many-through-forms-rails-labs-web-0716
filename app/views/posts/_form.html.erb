<%= form_for(@post) do |f|%>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <%= f.label :category %>
  <%= f.fields_for :categories, @post.categories.build do |category| %> <br>
    <%= category.label :category_name %> <br>
  <%= category.text_field :name %> <br>
<% end %>
<%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
<%= f.submit %>
<% end %>
